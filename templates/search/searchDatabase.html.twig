{% extends 'base.html.twig' %}

    {% block headertitle %}
        <h1>{% trans %} header.posts {% endtrans %}</h1>
    {% endblock %}

{% block body %}

    <div class="custom-container">
        <div class="row">
            <div class="col-lg-10 align-center">

                <div id="search">
                    {{ form_start(searchForm, {'attr': {'id': 'searchForm'}}) }}
                    <div class="form-group">
                        {{ form_widget(searchForm.search) }}
                    </div>
                    <div class="form-group">
                        <label>{% trans %}label.search_in{% endtrans %}:</label>
                        {{ form_widget(searchForm.type) }}
                    </div>
                    <div class="form-group">
                        <label>{% trans %}label.amountFilter{% endtrans %}</label>
                        {{ form_widget(searchForm.postsPerPage) }}
                    </div>

                    <button type="submit" class="btn btn-dark">{% trans %}form.search{% endtrans %}</button>
                    {{ form_end(searchForm) }}
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>

{#                <div class="post_count">{{ postAmount }} {% trans %}from.amount{% endtrans %} {{ totalFilteredBlogs }}</div>#}
                <div class="count">
                    {{ pagination.getTotalItemCount }}
                </div>

                <table class="table table-striped ">
                    <thead class="thead-dark">
                    <tr>
                        <th>{% trans %} table.title {% endtrans %}</th>
                        <th>{% trans %}table.short_description{% endtrans %}</th>
                        <th>{% trans %}table.author{% endtrans %}</th>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <th>{% trans %}table.actions{% endtrans %}</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>

                    {% for blog in blogs %}
                        <tr>
                            <td><a href="{{ path('app_blog_viewblog', {id: blog.id}) }}"
                                   style="cursor:pointer">{{ blog.title }}</a></td>
                            <td>{{ blog.shortDescription }}</td>
                            <td>
                                <a href="{{ path('app_user_viewuser', {username: blog.user.username}) }}">
                                    {{ blog.user.username }}
                                </a>
                            </td>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <td>
                                    <a href="{{ path('app_blog_delete', {id: blog.id}) }}"
                                       onclick="return confirm('{% trans %}delete.confirm{% endtrans %}');">{% trans %} link.delete {% endtrans %}</a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

