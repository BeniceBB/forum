{% extends 'base.html.twig' %}

{% block body %}
    <div class="header"></div>
    <div class="col-lg-8 align-center header-title">
        <h1>{% trans %} header.new_post {% endtrans %}</h1>
    </div>
    <div class="custom-container">
<div class="row">
    <div class="col-lg-10 align-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {{ form_start(form) }}

        <div class="form-group">
            <label>{% trans %}table.title{% endtrans %}</label>
            {{ form_widget(form.title) }}
        </div>
        <div class="form-group">
            <label>{% trans %}table.short_description{% endtrans %}</label>
            {{ form_widget(form.shortDescription) }}
        </div>
        <div class="form-group">
            <label>{% trans %}table.text{% endtrans %}</label>
            {{ form_widget(form.body) }}
        </div>

        <button type="submit" class="btn btn-dark">{% trans %}form.submit{% endtrans %}</button>
        <a href="{{ path('app_blog_index') }}">{% trans %}link.back_to_overview{% endtrans %}</a>



        {{ form_end(form) }}
    </div>
</div>
    </div>
{% endblock %}