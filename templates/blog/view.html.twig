{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <div class="header"></div>
    <div class="col-lg-8 align-center header-title">
        <h1>  {{ blog.title }}</h1>
    </div>
    <div class="custom-container">
        <div class="row">
            <div class="col-lg-10 align-center">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {{ blog.body }}
                <br><br>
                Auteur:<a
                        href="{{ path('app_user_viewuser', {username: blog.user.username}) }}">  {{ blog.user.username }}</a><br>
                <a href="{{ path('app_blog_index') }}">{% trans %}link.back_to_overview{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}