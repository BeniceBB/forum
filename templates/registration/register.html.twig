{% extends 'base.html.twig' %}

{% block title %}Register new Author{% endblock %}

{% block headertitle %}
    <h1>{% trans %} header.register {% endtrans %}</h1>
{% endblock %}

{% block body %}

    <div class="custom-container">
        <div class="row">
            <div class="col-lg-10 align-center">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {{ form_start(form) }}
                <div class="form-group">
                    <label>{% trans %}label.username{% endtrans %}</label>
                    {{ form_widget(form.username) }}
                </div>
                <div class="form-group">
                    <label>{% trans %}label.new_password{% endtrans %}</label>
                    {{ form_widget(form.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.agreeTerms) }}
                    <label>{% trans %}registration.agree_terms{% endtrans %}</label>
                </div>
                <button type="submit" class="btn btn-dark">{% trans %}form.register{% endtrans %}</button>
                <a href="{{ path('login') }}" class="register-link">{% trans %}link.login{% endtrans %}</a><br>
                <br> <a href="{{ path('app_blog_index') }}">{% trans %}link.back_to_overview{% endtrans %}</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
